<mujoco model="reacher">
	<compiler angle="radian" inertiafromgeom="true"/>
	<default>
		<joint armature="0.01" damping="0.1" limited="true"/>
		<!-- <geom friction="1 0.1 0.1" rgba="0.7 0.7 0 1"/> -->
	</default>
	<option gravity="0 0 -9.81" timestep="0.01"/>
	<worldbody>
		<!-- Arena -->
		<!-- <geom name="ground" pos="0 -0.3 0" rgba="0.9 0.9 0.9 1" size="1 1 1" type="plane" euler='1.57079632679 0 0'/> -->
        <!-- <geom name="ground" pos="0 -1 0" size="5 5 10" type="plane" euler='1.57079632679 0 0'/> -->
        <geom name="ground" pos="0 0 -0.5" size="1 1 1" type="plane" euler='0 0 0'/>

		<!-- Arm -->
		<body name="body0" pos="0 0 0" euler='0 0.5 0'>
            <geom fromto="0 0 0 0 -0.01 0" name="jnt0" rgba="0.9 0.4 0.6 1" size=".011" type="cylinder"/>
			<geom fromto="0 0 0 0.15 0 0" name="link0" rgba="0.0 0.4 0.6 1" size=".01" type="capsule"/>
			<!-- <joint axis="0 1 0" limited="false" name="joint0" pos="0 0 0" type="hinge"/> -->
			<body name="body1" pos="0.15 0 0" euler='0 -1 0'>
                <geom fromto="0 0 0 0 -0.01 0" name="jnt1" rgba="0.9 0.4 0.6 1" size=".011" type="cylinder"/>
				<joint axis="0 1 0" limited="true" name="joint1" pos="0 0 0" range="0 1.0" type="hinge"/>
				<geom fromto="0 0 0 0.1 0 0" name="link1" rgba="0.0 0.4 0.6 1" size=".01" type="capsule"/>
				<body name="fingertip" pos="0.11 0 0" euler='0 0.2 0'>
                    <geom fromto="0 0 0 0 -0.01 0" name="jnt2" rgba="0.9 0.4 0.6 1" size=".011" type="cylinder"/>
                    <geom fromto="0 0 0 0.1 0 0" name="link2" rgba="0.0 0.4 0.6 1" size=".01" type="capsule"/>
                    <joint axis="0 1 0" limited="true" name="joint2" pos="0 0 0" range="-0.4 0.4" type="hinge"/>
				</body>
			</body>
		</body>
		<!-- Target -->
		<body name="target" pos="0.25 0 0.05" euler='0 0 0'>
			<joint armature="0" axis="1 0 0"  limited="false" name="target_x" pos="0 0 0"  type="slide"/>
			<joint armature="0" axis="0 0 1"  limited="false" name="target_y" pos="0 0 0" type="slide"/>
            <joint armature="0" axis="0 1 0"  limited="false" name="target_z" pos="0 0 0" type="hinge"/>

			<geom name="target" pos="0 0 0" rgba="0.9 0.2 0.2 1" size=".05 0.02 0.02" type="ellipsoid"/>
		</body>



	</worldbody>
	<actuator>
		<!-- <motor ctrllimited="true" ctrlrange="-1.0 1.0" gear="200.0" joint="joint0"/> -->
		<motor ctrllimited="true" ctrlrange="-1.0 1.0" gear="200.0" joint="joint1"/>
	</actuator>
</mujoco>
